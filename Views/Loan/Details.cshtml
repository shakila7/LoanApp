@model LoanApp.Models.LoanApplication
@{
    ViewData["Title"] = "Loan Application Details";
}


<h2>Loan Application Details</h2>


<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.CustomerName</h5>
        <p class="card-text">
            <strong>NIC/Passport:</strong> @Model.NicPassport<br />
            <strong>Loan Type:</strong> @Model.LoanType<br />
            <strong>Interest Rate:</strong> @Model.InterestRate %<br />
            <strong>Loan Amount:</strong> @String.Format("{0:N2}", Model.LoanAmount)<br />
            <strong>Duration (months):</strong> @Model.DurationMonths<br />
            <strong>Status:</strong> @Model.Status<br />
            <strong>Applied At:</strong> @Model.CreatedAt
        </p>
        <a class="btn btn-warning" asp-controller="Loan" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-secondary" asp-controller="Loan" asp-action="Index">Back</a>
    </div>
</div>
