@model LoanApp.Models.LoanApplication


<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="CustomerName" class="form-label"></label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NicPassport" class="form-label"></label>
                <input asp-for="NicPassport" class="form-control" />
                <span asp-validation-for="NicPassport" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DurationMonths" class="form-label"></label>
                <input asp-for="DurationMonths" class="form-control" />
                <span asp-validation-for="DurationMonths" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" class="form-select">
                    <option value="New">New</option>
                    <option value="Approved">Approved</option>
                    <option value="Rejected">Rejected</option>
                </select>
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="LoanType" class="form-label"></label>
                <select asp-for="LoanType" class="form-select" id="loanTypeSelect">
                    <option value="Personal">Personal</option>
                    <option value="Housing">Housing</option>
                    <option value="Vehicle">Vehicle</option>
                </select>
                <span asp-validation-for="LoanType" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="InterestRate" class="form-label"></label>
                <input asp-for="InterestRate" class="form-control" id="interestRateInput" readonly/>
                <span asp-validation-for="InterestRate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LoanAmount" class="form-label"></label>
                <input asp-for="LoanAmount" class="form-control" />
                <span asp-validation-for="LoanAmount" class="text-danger"></span>
            </div>
        </div>
    </div>
    
    <button type="submit" class="btn btn-primary">Save</button>
    <button class="btn btn-secondary" asp-controller="Loan" asp-action="Index">Cancel</button>

</form>


@section Scripts {
    <script>
        function applyInterestFor(type) {
            if (type === 'Personal') return 12.5;
            if (type === 'Housing') return 8.0;
            if (type === 'Vehicle') return 9.0;
            return 0;
        }


        $(function () {
            var sel = $('#loanTypeSelect');
            var rate = $('#interestRateInput');
            function setRate() { rate.val(applyInterestFor(sel.val())); }
            setRate();
            sel.change(setRate);
        });
    </script>
}
